<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Users</title>

  <!-- ======= Estilos externos ======= -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/nav.css">

  <!-- ======= Estilos internos ======= -->
  <style>
    body {
      background-color: #ececec;
    }
  </style>
</head>

<body>
  <!-- ======= Navbar ======= -->
  {{> nav1 }}

  <!-- ======= Sección principal ======= -->
  <section class="container my-5">
    <div class="row">
      <div class="col-12 bg-light p-4 rounded shadow-lg">
        <div class="row mb-4 text-center">
          <div class="col-12">
            <h1 class="fw-bold">Users Management</h1>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col-md-4 mb-3 mb-md-0 d-flex justify-content-center">
            <div class="bg-secondary text-white p-3 rounded w-100" style="max-width: 300px;">
              <p class="fw-bold text-start text-capitalize mb-3">View by:</p>
              <div class="d-grid gap-2">
                <button id="btnStudent" class="btn btn-dark">Student</button>
                <button id="btnTallerist" class="btn btn-primary">Tallerist</button>
                <button id="btnProfessor" class="btn btn-primary">Professor</button>
              </div>
            </div>
          </div>

          <div class="col-md-4 d-flex justify-content-center align-items-center text-center">
            <button id="btnAdd" class="btn btn-success btn-lg px-5 py-3" style="display: none;">
              Add new
            </button>
          </div>
          <div class="col-md-4 d-flex justify-content-center">
            <div class="bg-light p-3 rounded d-grid gap-2 w-100" style="max-width: 300px;">
              <a href="#" id="btnReports" class="fw-bold btn btn-warning d-flex align-items-center justify-content-between fs-3">
                Reports <i class="bi bi-arrow-right-square-fill ms-2 fs-2"></i>
              </a>
              <a href="#" id="btnWorkshops" class="fw-bold btn btn-warning d-flex align-items-center justify-content-between fs-3">
                Workshops <i class="bi bi-arrow-right-square-fill ms-2 fs-2"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-12">
            <div class="table-responsive">
              <table id="tablaUsuarios" class="table table-hover table-bordered table-striped align-middle bg-light">
                <thead class="table-light">
                  <tr id="theadUsuarios"></tr>
                </thead>
                <tbody id="tbodyUsuarios"></tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- ======= Modal: Editar usuario ======= -->
  <div class="modal fade" id="modalUser" tabindex="-1" aria-labelledby="modalUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content border-0 shadow-lg">
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title fw-bold" id="modalUserLabel">User Details</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>

        <form id="formUser">
          <div class="modal-body bg-light">
            <div class="container-fluid px-3">
              <div class="row g-3">
                <div class="col-md-4">
                  <label for="nombre" class="form-label fw-semibold">Name</label>
                  <input type="text" class="form-control bg-white" id="nombre" name="nombre">
                </div>
                <div class="col-md-4">
                  <label for="paterno" class="form-label fw-semibold">Lastname</label>
                  <input type="text" class="form-control bg-white" id="paterno" name="paterno">
                </div>
                <div class="col-md-4">
                  <label for="materno" class="form-label fw-semibold">Second Lastname</label>
                  <input type="text" class="form-control bg-white" id="materno" name="materno">
                </div>
              </div>
              <div class="row g-3 mt-2">
                <div class="col-md-6">
                  <label for="email" class="form-label fw-semibold">Email</label>
                  <input type="email" class="form-control bg-white" id="email" name="email">
                </div>
                <div class="col-md-3 d-none" id="grupoNUA">
                  <label for="nua" class="form-label fw-semibold">NUA</label>
                  <input type="text" class="form-control bg-white" id="nua" name="nua">
                </div>
                <div class="col-md-3 d-none" id="grupoNivel">
                  <label for="nivel_ingles" class="form-label fw-semibold">Level</label>
                  <select class="form-select bg-white" id="nivel_ingles" name="nivel_ingles">
                    <option value="">Select</option>
                    <option value="1A">1A</option>
                    <option value="1B">1B</option>
                    <option value="2A">2A</option>
                    <option value="2B">2B</option>
                    <option value="3A">3A</option>
                    <option value="3B">3B</option>
                    <option value="4A">4A</option>
                    <option value="4B">4B</option>

                  </select>
                </div>
              </div>

              <div class="row g-3 mt-2 d-none" id="grupoProfesor">
                <div class="col-md-12">
                  <label for="idprofesor" class="form-label fw-semibold">Assigned Teacher</label>
                  <select name="idprofesor" class="form-select bg-white" id="idprofesor"></select>
                </div>
              </div>
              <input type="hidden" id="tipoUsuario" name="tipoUsuario">
              <input type="hidden" id="idUsuario" name="idUsuario">

            </div>
          </div>
          <div class="modal-footer bg-secondary-subtle">
            <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-dark" id="btnGuardarCambios">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- ======= Modal: Confirmar eliminación ======= -->
  <div class="modal fade" id="modalConfirmDelete" tabindex="-1" aria-labelledby="modalConfirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-0 shadow">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="modalConfirmDeleteLabel">Confirm Deletion</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p class="fw-semibold fs-5">Are you sure you want to delete this user?</p>
        </div>
        <div class="modal-footer bg-light">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" id="btnConfirmDelete">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <!-- ======= Modal: Agregar nuevo usuario ======= -->
  <div class="modal fade" id="modalAddUser" tabindex="-1" aria-labelledby="modalAddUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content border-0 shadow-lg">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title fw-bold" id="modalAddUserLabel">Add New User</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>

        <form id="formAddUser">
          <div class="modal-body bg-light">
            <div class="container-fluid px-3">
              <div class="row g-3">
                <div class="col-md-4">
                  <label for="add_nombre" class="form-label fw-semibold">Name</label>
                  <input type="text" class="form-control bg-white" id="add_nombre" name="nombre" required>
                </div>
                <div class="col-md-4">
                  <label for="add_paterno" class="form-label fw-semibold">Lastname</label>
                  <input type="text" class="form-control bg-white" id="add_paterno" name="paterno" required>
                </div>
                <div class="col-md-4">
                  <label for="add_materno" class="form-label fw-semibold">Second Lastname</label>
                  <input type="text" class="form-control bg-white" id="add_materno" name="materno">
                </div>
              </div>

              <div class="row g-3 mt-2">
                <div class="col-md-6">
                  <label for="add_email" class="form-label fw-semibold">Email</label>
                  <input type="email" class="form-control bg-white" id="add_email" name="email" required>
                </div>
                <div class="col-md-6">
                  <label for="add_password" class="form-label fw-semibold">Password</label>
                  <input type="password" class="form-control bg-white" id="add_password" name="password" required>
                </div>
              </div>
              <input type="hidden" id="add_tipoUsuario" name="tipoUsuario">
            </div>
          </div>

          <div class="modal-footer bg-secondary-subtle">
            <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- ======= Scripts ======= -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/users.js"></script>
</body>
</html>
