<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Periodos</title>

  <!-- ======= Estilos externos ======= -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="/css/nav.css" />

  <!-- ======= Estilos internos ======= -->
  <style>
    body {
      background-color: #ececec;
    }

    .bg-cover {
      background-size: cover;
      background-position: center;
    }
  </style>
</head>

<body>
  <!-- ======= Navbar ======= -->
  {{> nav1 }}

  <!-- ======= Contenido principal ======= -->
  <section class="container my-5">
    <div class="row">
      <div class="col-12 bg-light p-4 rounded shadow-lg">

        <!-- ======= Título ======= -->
        <div class="row mb-4">
          <div class="col-12 text-center">
            <h1 class="fw-bold">Periods Admin</h1>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4 d-flex justify-content-center">
            <div class="bg-secondary text-white p-3 rounded w-100" style="max-width: 300px;">
              <p class="fw-bold mb-2">Current Period:</p>
              <div class="fs-5 text-capitalize fw-semibold">
                {{#if periodoActivo}}
                  {{periodoActivo.nombre}}<br />
                  <small>{{periodoActivo.fecha_inicio}} - {{periodoActivo.fecha_fin}}</small>
                {{else}}
                  <span class="text-light">No active period</span>
                {{/if}}
              </div>
            </div>
          </div>

          <!-- Botón agregar -->
          <div class="col-md-4 d-flex justify-content-center align-items-center">
            <button id="btnAdd" class="btn btn-success btn-lg px-5 py-3">
              Add New & Change Period
            </button>
          </div>

          <div class="col-md-4 d-flex justify-content-center">
            <div class="bg-light p-3 rounded d-grid gap-2 w-100" style="max-width: 300px;">
              <a href="#" id="btnReports" class="fw-bold btn btn-warning d-flex align-items-center justify-content-between fs-4">
                Reports <i class="bi bi-arrow-right-square-fill ms-2 fs-2"></i>
              </a>
              <a href="#" id="btnWorkshops" class="fw-bold btn btn-warning d-flex align-items-center justify-content-between fs-4">
                Workshops <i class="bi bi-arrow-right-square-fill ms-2 fs-2"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- ======= Tabla de periodos ======= -->
        <div class="row mt-5">
          <div class="col-12">
            <div class="table-responsive">
              <table id="tablaPeriodos" class="table table-hover table-bordered table-striped align-middle bg-light">
                <thead class="table-light">
                  <tr>
                    <th>Period</th>
                    <th>Start Date</th>
                    <th>Finish Date</th>
                    <th>Stade</th>
                    <th class="text-center">Actions</th>
                  </tr>
                </thead>
                <tbody id="tbodyPeriodos">
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- ======= Modal: Agregar / Editar periodo ======= -->
  <div class="modal fade" id="modalPeriodo" tabindex="-1" aria-labelledby="modalPeriodoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content border-0 shadow-lg">

        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title fw-bold" id="modalPeriodoLabel">Add / Edit Period</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>

        <form id="formPeriodo">
          <div class="modal-body bg-light">
            <div class="container-fluid px-3">
              <div class="row g-3">
                <div class="col-md-4">
                  <label for="nombre" class="form-label fw-semibold">Period Name</label>
                  <input type="text" class="form-control bg-white" id="nombre" name="nombre" required />
                </div>
                <div class="col-md-4">
                  <label for="fecha_inicio" class="form-label fw-semibold">Start Date</label>
                  <input type="date" class="form-control bg-white" id="fecha_inicio" name="fecha_inicio" required />
                </div>
                <div class="col-md-4">
                  <label for="fecha_fin" class="form-label fw-semibold">Finish Date</label>
                  <input type="date" class="form-control bg-white" id="fecha_fin" name="fecha_fin" required />
                </div>
              </div>
              <input type="hidden" name="idperiodo" id="idperiodo" />
            </div>
          </div>

          <div class="modal-footer bg-secondary-subtle">
            <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-dark" id="btnGuardarPeriodo">Save</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <!-- ======= Scripts ======= -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/periodos.js"></script>
</body>
</html>
