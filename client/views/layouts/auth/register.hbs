<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Registrarte</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- ======= Estilos externos ======= -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/nav.css">

  <!-- ======= Estilos internos ======= -->
  <style>
    body {
      background-color: #ececec;
    }

    .row.w-100 {
      min-height: 500px;
    }

    .object-fit-cover {
      object-fit: cover;
      height: 100%;
    }
  </style>
</head>

<body>

  <!-- ======= Navbar ======= -->
  {{> nav0 }}

  <!-- ======= Título ======= -->
  <div class="d-flex justify-content-center">
    <span class="fw-bold fs-1 mt-3">Conversational Workshops</span>
  </div>

  <!-- ======= Contenido principal ======= -->
  <div class="container vh-100 d-flex justify-content-center align-items-start mt-5">
    <div class="row w-100 shadow rounded overflow-hidden">

      <!-- ======= Formulario de registro ======= -->
      <div class="col-md-6 p-5 d-flex flex-column justify-content-center bg-white">
        <h4 class="mb-4 text-center">Sign Up</h4>

        <form action="/registro" method="POST" class="row g-3">
          <div class="col-md-4">
            <input type="text" name="nombre" class="form-control" placeholder="Name" required>
          </div>
          <div class="col-md-4">
            <input type="text" name="paterno" class="form-control" placeholder="Paternal" required>
          </div>
          <div class="col-md-4">
            <input type="text" name="materno" class="form-control" placeholder="Maternal" required>
          </div>
          <div class="col-md-6">
            <input type="email" name="email" class="form-control" placeholder="Email" required>
          </div>
          <div class="col-md-6">
            <input type="text" name="nua" class="form-control" placeholder="NUA" required>
          </div>
          <div class="col-md-6">
            <input type="password" name="password" class="form-control" placeholder="Password" required>
          </div>
          <div class="col-md-3">
            <select name="nivel_ingles" class="form-select" required>
              <option disabled selected>Level</option>
              <option value="1A">1A</option>
              <option value="1B">1B</option>
              <option value="2A">2A</option>
              <option value="2B">2B</option>
              <option value="3A">3A</option>
              <option value="3B">3B</option>
            </select>
          </div>
          <div class="col-md-3">
            <select name="idprofesor" class="form-select" required>
              <option disabled selected>Professor</option>
              {{#each profesores}}
                <option value="{{this.iduser}}">{{this.nombre}} {{this.paterno}} {{this.materno}}</option>
              {{/each}}
            </select>
          </div>
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
          </div>
          <div class="text-center">
            <a href="/login">Already have an account? Sign In</a>
          </div>
        </form>
      </div>

      <!-- ======= Imagen de acompañamiento ======= -->
      <div class="col-md-6 p-0">
        <div class="h-100 w-100" style="background-image: url('/img/registro.png'); background-size: cover; background-position: center;"></div>
      </div>

    </div>
  </div>

</body>
</html>
